# Optimize USB NVMe adapters (Realtek RTL9210)
# Disable USB power management for NVMe adapters
ACTION=="add", SUBSYSTEM=="usb", ATTR{idVendor}=="0bda", ATTR{idProduct}=="9210", ATTR{power/control}="on"

# Optimize I/O scheduler and transfer size for USB-attached NVMe drives
ACTION=="add|change", KERNEL=="sd[a-z]", ATTRS{idVendor}=="0bda", ATTRS{idProduct}=="9210", ATTR{queue/scheduler}="none"
ACTION=="add|change", KERNEL=="sd[a-z]", ATTRS{idVendor}=="0bda", ATTRS{idProduct}=="9210", ATTR{queue/read_ahead_kb}="1024"
